<style>
  /* Navbar styles */
  .navbar {
    background-color: #007BFF; /* Blue background color */
    color: #fff;
  }

  .navbar-brand {
    color: #fff;
    font-weight: bold;
    font-size: 24px;
  }

  .navbar-toggler {
    border: none;
    color: #fff;
  }

  .navbar-toggler-icon {
    background-image: url('data:image/svg+xml;charset=utf8,%3Csvg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" class="iconify" fill="%23fff"%3E%3Cpath d="M4 8v2h24V8zm0 6v2h24v-2zm0 6v2h24v-2z"%3E%3C/path%3E%3C/svg%3E');
  }

  .navbar-nav .nav-link {
    color: #fff;
    font-size: 18px;
    margin-left: 10px;
  }

  .navbar-nav .nav-link:hover {
    color: #f00; /* Change the color on hover as desired */
  }

  .dropdown-menu {
    background-color: #007BFF; /* Blue background color for dropdown */
    border: none;
  }

  .dropdown-item {
    color: #fff;
    font-size: 16px;
  }

  .dropdown-item:hover {
    background-color: #f00; /* Change the background color on hover as desired */
  }

  .dropdown-divider {
    border-top: 1px solid #fff;
  }
   .navbar .dropdown-menu {
    right: 0;
    left: auto;
  }
</style>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <%= link_to 'HR-Mitra', root_path, class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'About Us', about_us_path, target: '_blank', class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Contact Us', contact_us_path, target: '_blank', class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Privacy Policy', privacy_policy_path, target: '_blank', class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Terms and Conditions', terms_and_conditions_path, target: '_blank', class: 'nav-link' %>
        </li>
      </ul>
      <% if user_signed_in? %>
        <ul class="navbar-nav"> <!-- Move this line inside the 'collapse' div -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Settings
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li>
                <%= link_to "Logged in as #{current_user.email}", "javascript:void(0)", class: 'dropdown-item', disabled: true %>
              </li>
              <li>
                <%= link_to 'Sign Out', destroy_user_session_path, class: 'dropdown-item', method: :delete, data: { confirm: 'Are you sure you want to Logout?' } %>
              </li>
            </ul>
          </li>
        </ul>
      <% else %>
        <a href="<%= new_user_session_path %>" class="btn btn-light mx-2">Sign In</a>
      <% end %>
    </div>
  </div>
</nav>
