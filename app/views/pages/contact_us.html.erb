<div class="col-lg-10 mx-auto">
	<h1 class="text=center"></h1>
	<!DOCTYPE html>
<html>
<head>
  <title>Contact Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Add custom styles here */
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
    }
    .container-contact100 {
      max-width: 600px;
      margin: 0 auto;
      padding: 40px;
      background-color: #ffffff;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .contact100-form-title {
      font-size: 30px;
      font-weight: bold;
      text-align: center;
      color: #333;
      margin-bottom: 30px;
    }
    .label-input100 {
      font-size: 14px;
      font-weight: bold;
      color: #555;
      margin-bottom: 5px;
    }
    .input100, .js-select2 {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
      color: #444;
    }
    .js-select2::after {
      content: "\f107";
      font-family: FontAwesome;
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      pointer-events: none;
    }
    .wrap-contact100-form-radio {
      margin-bottom: 20px;
    }
    .contact100-form-radio {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }
    .input-radio100 {
      margin-right: 5px;
    }
    .label-radio100 {
      font-size: 14px;
      color: #555;
    }
    .wrap-contact100-form-range {
      margin-bottom: 20px;
    }
    .contact100-form-range-value {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 10px;
    }
    .contact100-form-range-bar, #filter-bar {
      height: 6px;
      border-radius: 5px;
    }
    .contact100-form-range-bar {
      background-color: #ccc;
    }
    #filter-bar {
      background-color: #3f51b5;
    }
    .input100[type="text"]::placeholder {
      color: #ccc;
    }
    .contact100-form-btn {
      width: 100%;
      padding: 10px;
      background-color: #3f51b5;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      color: #fff;
      cursor: pointer;
    }
    .contact100-form-btn i {
      margin-left: 5px;
    }
  </style>
</head>
<body>
  <div class="container-contact100">
    <div class="wrap-contact100">
      <form class="contact100-form validate-form">
        <span class="contact100-form-title">Contact Us</span>
        <div class="wrap-input100 validate-input bg1" data-validate="Please Type Your Name">
          <span class="label-input100">FULL NAME *</span>
          <input class="input100" type="text" name="name" placeholder="Enter Your Name">
        </div>
        <div class="wrap-input100 validate-input bg1 rs1-wrap-input100" data-validate="Enter Your Email (e@a.x)">
          <span class="label-input100">Email *</span>
          <input class="input100" type="text" name="email" placeholder="Enter Your Email">
        </div>
        <div class="wrap-input100 bg1 rs1-wrap-input100">
          <span class="label-input100">Phone</span>
          <input class="input100" type="text" name="phone" placeholder="Enter Number Phone">
        </div>
        <div class="wrap-input100 input100-select bg1">
          <span class="label-input100">Needed Services *</span>
          <div>
            <select class="js-select2" name="service">
              <option>Please choose</option>
              <option>HR Consulting</option>
              <option>Payroll Management</option>
              <option>Recruitment Services</option>
              <option>Employee Training</option>
            </select>
            <div class="dropDownSelect2"></div>
          </div>
        </div>
        <div class="wrap-input100 validate-input bg0 rs1-alert-validate" data-validate="Please Type Your Message">
          <span class="label-input100">Message</span>
          <textarea class="input100" name="message" placeholder="Your message here..."></textarea>
        </div>
        <div class="container-contact100-form-btn">
          <button class="contact100-form-btn">
            <span>Submit<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i></span>
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>

</div>

