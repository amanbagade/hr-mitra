<div class="col-lg-12">
	<%= flash[:notice]  %>
 <div class="card rounded-0 mt-5 mb-5">
	<div class="card_body">
		<h2 class="text-center">Listing Emlpoyees Documents</h2>
	</div>
 </div>
 <%= link_to "Create New Document", new_document_path, class: "btn btn-primary btn-lg mb-4 rounded-0"  %>
 <%= link_to "Back to Employees", employees_path, class: "btn btn-primary btn-lg mb-4 rounded-0" %>
 <table class="table table-bordered">
	<thead>
	  <tr>
		<th>Name</th>
		<th>Doc Type</th>
		<th>Employee</th>
		<th>Actions</th>
	  </tr>
	</thead>
	<tbody>
		<% @documents.each do |document| %>
		<tr>
			<td><%= document.name %></td>
			<td><%= document.doc_type %></td>
			<td><%= link_to document.employee.name, employee_path(document.employee) %></td>
			<td><%= link_to "Edit", edit_document_path(document), class: "btn btn-primary" %></td>
			<td><%= link_to "View", document_path(document), class: "btn btn-info" %></td>
			<td><%= link_to "Delete", document_path(document), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure to delete this document?' } %></td>
		</tr>
		<% end %>
	</tbody>
 </table>
</div>